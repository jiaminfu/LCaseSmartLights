<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_back"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="cn.com.lcase.app.ui.MainActivity">

   <RelativeLayout
       android:id="@+id/rl_title"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_marginTop="7dp"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_centerVertical="true"
           android:id="@+id/imageView"
           android:layout_width="95dp"
           android:layout_height="18dp"
           android:layout_centerHorizontal="true"

           android:src="@mipmap/main_title" />

       <RelativeLayout
           android:background="@drawable/finish_background"
           android:id="@+id/layout_add"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:padding="10dp">
           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="18dp"
               android:layout_height="18dp"
               android:src="@mipmap/add" />
       </RelativeLayout>
   </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:gravity="center_vertical"
        android:layout_above="@+id/img_voice">

        <LinearLayout
            android:id="@+id/ll_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginRight="68dp"
            android:gravity="center"

            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_shebei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp">

                <ImageView
                    android:id="@+id/img_shebei"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/shebei_selector"
                    />

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_shebei"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="设备"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="133dp"
                android:layout_marginBottom="17dp"
                android:background="@color/line_bg" />

            <RelativeLayout
                android:id="@+id/layout_fenzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp">

                <ImageView
                    android:id="@+id/img_fenzu"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/fenzu_selector" />

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_fenzu"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="分组"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_up"
            android:orientation="horizontal">

            <View
                android:layout_width="133dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="30dp"
                android:background="@color/line_bg" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="133dp"
                android:layout_height="0.5dp"
                android:layout_marginRight="30dp"
                android:background="@color/line_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="68dp"
            android:paddingRight="68dp">

            <RelativeLayout
                android:id="@+id/layout_changjing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp">

                <ImageView
                    android:id="@+id/img_changjing"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/changjing_selector" />

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_changjing"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="场景"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="133dp"
                android:layout_marginTop="17dp"
                android:background="@color/line_bg" />

            <RelativeLayout
                android:id="@+id/layout_wode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp">

                <ImageView
                    android:id="@+id/img_wode"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/wode_selector" />

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_wode"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/wave1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:src="@mipmap/white" />
    <ImageView
        android:id="@+id/wave2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:src="@mipmap/white" />
    <ImageView
        android:id="@+id/wave3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:src="@mipmap/white" />
    <ImageView
        android:id="@+id/img_voice"
        android:layout_width="50dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:src="@mipmap/microphone" />

</RelativeLayout>
