<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="cn.com.lcase.app.ui.GroupingActivity">

    <com.dalong.francyconverflow.FancyCoverFlow
        android:background="@color/white"
        android:id="@+id/fancyCoverFlow"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

<ListView
    android:id="@+id/listView"
    android:divider="@null"
    android:layout_above="@+id/layout_2"
    android:layout_below="@+id/fancyCoverFlow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/open_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:background="@drawable/btn_user_selector"
            android:text="全开" />
        <Button
            android:id="@+id/close_all"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/btn_selector_gray"
            android:text="全关" />
    </LinearLayout>
</RelativeLayout>
